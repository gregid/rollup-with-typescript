{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "lib": ["es6", "DOM"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        // "outDir": "dist/tmp",
        "target": "es2017"
    },
    "include": ["src/**/*", "types/**/*"],
    "exclude": [
        "node_modules"
    ],
    "types": [
        "underscore"
    ]
}